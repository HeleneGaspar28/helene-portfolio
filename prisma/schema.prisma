datasource db {
  provider = "sqlite"          // change to "postgresql" in prod
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id         Int            @id @default(autoincrement())
  slug       String         @unique
  title      String
  subtitle   String?
  summary    String

  githubUrl  String?
  websiteUrl String?

  coverUrl   String?
  images     ProjectImage[]

  techStack  Json?

  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
}

model ProjectImage {
  id        Int      @id @default(autoincrement())
  url       String
  alt       String?
  position  Int      @default(0)
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int

  @@index([projectId, position])
}
